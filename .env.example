# Shade Identity Provider Configuration

# Core Settings
RUST_LOG=shade=debug,tower_http=debug
SHADE_HOST=0.0.0.0
SHADE_PORT=8083
SHADE_ISSUER=https://auth.example.com
SHADE_EXTERNAL_URL=https://auth.example.com

# Security
SHADE_COOKIE_SECRET=base64:replace_me_with_32_plus_bytes_base64_encoded_secret
SHADE_JWT_SIGNING_ALG=RS256
SHADE_ACCESS_TOKEN_TTL=3600
SHADE_REFRESH_TOKEN_TTL=2592000
SHADE_REQUIRE_PKCE=true
SHADE_REFRESH_TOKEN_ROTATION=true
SHADE_MAX_FAILED_ATTEMPTS=5
SHADE_LOCKOUT_DURATION_MINUTES=15

# Database
DATABASE_URL=postgres://shade:shadepass@localhost/shade
DATABASE_MAX_CONNECTIONS=10

# Redis
REDIS_URL=redis://localhost:6379

# Admin Bootstrap
SHADE_ADMIN_EMAIL=admin@example.com
SHADE_ADMIN_PASSWORD=ChangeMe!Long1

# OAuth Providers
# Google
OIDC_GOOGLE_CLIENT_ID=your_google_client_id
OIDC_GOOGLE_CLIENT_SECRET=your_google_client_secret
OIDC_GOOGLE_REDIRECT_URI=https://auth.example.com/callback/google

# GitHub
OIDC_GITHUB_CLIENT_ID=your_github_client_id
OIDC_GITHUB_CLIENT_SECRET=your_github_client_secret
OIDC_GITHUB_REDIRECT_URI=https://auth.example.com/callback/github

# Microsoft Entra (Azure AD)
OIDC_ENTRA_TENANT_ID=your_tenant_id
OIDC_ENTRA_CLIENT_ID=your_entra_client_id
OIDC_ENTRA_CLIENT_SECRET=your_entra_client_secret
OIDC_ENTRA_REDIRECT_URI=https://auth.example.com/callback/entra